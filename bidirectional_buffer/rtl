module Bidirectional_Buffer(
    input wire A,         // Data input
    input wire B,         // Data input
    input wire DIR,       // Direction control signal (1 = output, 0 = input)
    inout wire IO         // Bidirectional I/O
);

    // If DIR is 1, drive the IO with A, else drive it with B
    assign IO = (DIR) ? A : 1'bz; // If DIR is high, output A; otherwise, high impedance
    assign IO = (~DIR) ? B : 1'bz; // If DIR is low, output B; otherwise, high impedance

endmodule
